# KYC 系统环境变量配置示例
# 复制此文件为 .env，然后填入实际的配置值
# 注意：.env 不会被提交到 Git（已在 .gitignore 中排除）

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Flask 配置
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
FLASK_ENV=production
FLASK_APP=run.py
FLASK_DEBUG=0
SECRET_KEY=your-flask-secret-key-change-this

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 数据库配置
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
DATABASE_URL=postgresql://kyc_user:kyc_password@kyc_postgres:5432/kyc_db

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 隐秘管理后台配置（重要！）
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 用于登录 https://kyc.317073.xyz/admin-manual/ 的密钥
# ⚠️  强烈建议修改为复杂的、只有你知道的密钥
# 示例：K8x@2vP9mLq#5hRz$3nWs1tY7uJ
ADMIN_SECRET_KEY=your-super-secret-admin-key-change-this-now

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Sumsub API 配置
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
SUMSUB_API_KEY=your-sumsub-api-key
SUMSUB_API_URL=https://api.sumsub.com

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Webhook 配置
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
WEBHOOK_SECRET=your-webhook-secret-key
TAOBAO_APP_KEY=your-taobao-app-key
TAOBAO_APP_SECRET=your-taobao-app-secret

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 服务器配置
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
HOST=0.0.0.0
PORT=5000
LOG_LEVEL=INFO

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 📝 快速开始
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 
# 1. 复制此文件为 .env：
#    cp .env.example .env
#
# 2. 编辑 .env 填入你的配置：
#    nano .env
#
# 3. 最关键的是修改 ADMIN_SECRET_KEY！
#
# 4. 重启应用：
#    docker-compose restart web
#
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# ⚠️ 安全提醒
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# • ADMIN_SECRET_KEY 是隐秘管理后台的唯一入口，请务必修改！
# • 不要把 .env 文件提交到 Git
# • 定期更换敏感密钥
# • 在生产环境使用强密码和复杂密钥
